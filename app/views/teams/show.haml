:javascript
  $(function() {
    $('ul.menu li a[href="#{thk_path}"]').parent().addClass('active');
    $('ul.page-menu li a[href="'+document.location.pathname+'"]').parent().addClass('active');
  });
.content.columns.clear
  .main.page
    %h1 КОМАНДА
    %ul.page-menu
      %li
        %a{:href => thk_path} СОСТАВ ТХК
      %li
        %a{:href => mhk_path} СОСТАВ МХК ТВЕРИЧИ
      %li
        %a{:href => "/history/"} ИСТОРИЯ
      %li
        %a{:href => "/partners/"} ПАРТНЕРЫ
      %li
        %a{:href => "/contacts/"} КОНТАКТЫ
    %ul.page-submenu
      - if @people.forwards.count > 0
        %li
          %a{:href => "#forwards"} нападающие
      - if @people.defenders.count > 0
        %li
          %a{:href => "#defenders"} защитники
      - if @people.goalkeepers.count > 0
        %li
          %a{:href => "#goalkeepers"} вратари
      - if @people.coaches.count > 0
        %li
          %a{:href => "#coaches"} тренеры
      - if @people.direction.count > 0
        %li
          %a{:href => "#direction"} руководство
    - if @people.forwards.count > 0
      .block#forwards
        %h2.block-header
          %span НАПАДАЮЩИЕ
        - if @team.people_statistic
          = @team.people_statistic.html_safe
        %ul.person-list
          - @people.forwards.each do |person|
            %li.person.person_player
              - if person.description
                .person-temp= person.description
              .person-image
                - if person.image.exists?
                  %img{:src => person.image, :alt => ""}/
              .person-name
                - if person.number
                  %span.person-num= "%02d" % person.number
                = person.name
              .person-phys #{person.height} РОСТ / #{person.weight} ВЕС / #{person.birthyear} Г.Р.
    - if @people.defenders.count > 0
      .block#defenders
        %h2.block-header
          %span Защитики
        - if @team.people_statistic
          = @team.people_statistic.html_safe
        %ul.person-list
          - @people.defenders.each do |person|
            %li.person.person_player
              - if person.description
                .person-temp= person.description
              .person-image
                - if person.image.exists?
                  %img{:src => person.image, :alt => ""}/
              .person-name
                - if person.number
                  %span.person-num= "%02d" % person.number
                = person.name
              .person-phys #{person.height} РОСТ / #{person.weight} ВЕС / #{person.birthyear} Г.Р.
    - if @people.goalkeepers.count > 0
      .block#goalkeepers
        %h2.block-header
          %span Вратари
        %ul.person-list
          - @people.goalkeepers.each do |person|
            %li.person.person_player
              - if person.description
                .person-temp= person.description
              .person-image
                - if person.image.exists?
                  %img{:src => person.image, :alt => ""}/
              .person-name
                - if person.number
                  %span.person-num= "%02d" % person.number
                = person.name
              .person-phys #{person.height} РОСТ / #{person.weight} ВЕС / #{person.birthyear} Г.Р.
    - if @people.coaches.count > 0
      .block#coaches
        %h2.block-header
          %span Тренеры
        %ul.person-list
          - @people.coaches.each do |person|
            %li.person
              .person-image
                %img{:src => "images/data/t1.png", :alt => ""}/
              .person-name= person.name
              .person-status= person.position
              .person-desc= person.description
              .person-phys #{person.birthyear} Г.Р. / СТАЖ #{person.experience} ЛЕТ
    - if @people.direction.count > 0
      .block#direction
        %h2.block-header
          %span Руководство
        %ul.person-list
          - @people.direction.each do |person|
            %li.person
              .person-image
                %img{:src => "images/data/t1.png", :alt => ""}/
              .person-name= person.name
              .person-status= person.position
              .person-desc= person.description
              .person-phys #{person.birthyear} Г.Р. / СТАЖ #{person.experience} ЛЕТ
  = render "right_column"

-#
              .person-info
                .person-info-line
                  .person-info-percent #{person.goals}%
                  .person-info-about Голы
                  .person-info-statusbar
                    .person-info-statusbar-filler{:style => "width: #{person.goals}%"}
                .person-info-line
                  .person-info-percent #{person.efficiency}%
                  .person-info-about Эффективность
                  .person-info-statusbar
                    .person-info-statusbar-filler{:style => "width: #{person.efficiency}%"}
                .person-info-line
                  .person-info-percent #{person.fouls}%
                  .person-info-about Фолы
                  .person-info-statusbar
                    .person-info-statusbar-filler{:style => "width: #{person.fouls}%"}