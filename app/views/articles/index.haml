:javascript
  $(function() {
    $('ul.menu li a[href$="#{articles_path}"]').parent().addClass('active');
  });
.content.columns.clear
  .main.page
    %h1 Публикации
    = render "top_menu"
    .articles
      .block
        %ul.article-list.clear
          - @articles.each do |article|
            %li.article-item
              - if article.image.exists?
                = link_to image_tag(article.image(:square), :alt => article.title), article_path(article), {:class => 'article-image'}
              .article-type
                %a{:href => "#"} Интервью
              .article-date
                .digit= l article.published_at, :format => "%d"
                = l article.published_at, :format => "%b / %a"
              = link_to article.title, article_path(article), {:class => 'article-title'}
  = render "right_column"